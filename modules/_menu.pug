mixin mainMenu({mainMenu})
  ul.navbar-nav
    each val in mainMenu
      li.nav-item
        if val.secondLevelMenu
          a.nav-link(
            href= "#" + val.url
            data-toggle="collapse"
            role="button"
            aria-expanded="true"
            aria-controls= val.url
          )= val.name
            if val.icon
              i(
                class= val.icon
              )
          .collapse(
            class= val.isShow ? "show" : ""
            id= val.url
          )
            ul.nav
              each secondLevel in val.secondLevelMenu
                li.nav-item
                  if secondLevel.thirdLevelMenu
                    a.nav-link(
                      href= "#" + secondLevel.url
                      data-toggle="collapse"
                      role="button"
                      aria-expanded="false"
                      aria-controls= secondLevel.url
                    )= secondLevel.name
                    .collapse(
                      id= secondLevel.url
                    )
                      ul.nav
                        each thirdLevel in secondLevel.thirdLevelMenu
                          li.nav-item
                            a.nav-link(
                              href= thirdLevel.url
                            )= thirdLevel.name
                  else
                    a.nav-link(
                      href= secondLevel.url
                      class= secondLevel.isActive ? "active" : ""
                    )= secondLevel.name
                      if secondLevel.badge
                        span.badge(
                          class= secondLevel.badge.badgeClass
                        )= secondLevel.badge.content
        else
          a.nav-link(
            href= "#" + val.url
          )= val.name
            if val.icon
              i(
                class= val.icon
              )
            if val.badge
                        span.badge(
                          class= val.badge.badgeClass
                        )= val.badge.content

